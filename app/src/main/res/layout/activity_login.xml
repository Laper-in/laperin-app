<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity">

    <TextView
        android:id="@+id/tv_masuk"
        style="@style/bold.light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/masuk"
        android:textColor="@color/orange"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edEmail_login"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.429" />

    <ImageView
        android:id="@+id/iv_animation"
        android:layout_width="331dp"
        android:layout_height="187dp"
        android:src="@drawable/logo_laperin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.077" />

    <com.capstone.laperinapp.ui.customView.EditText
        android:id="@+id/edEmail_login"
        style="@style/medium"
        android:layout_width="309dp"
        android:layout_height="53dp"
        android:background="@drawable/rounded"
        android:drawablePadding="@dimen/spacing_8"
        android:hint="@string/masukkan_email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_animation"
        app:layout_constraintVertical_bias="0.273" />

    <com.capstone.laperinapp.ui.customView.EditText
        android:id="@+id/ed_password_login"
        style="@style/medium"
        android:layout_width="309dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded"
        android:drawableEnd="@drawable/ic_password"
        android:drawablePadding="@dimen/spacing_8"
        android:hint="@string/Masukkan_password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/edEmail_login"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edEmail_login"
        app:layout_constraintTop_toBottomOf="@+id/edEmail_login" />

    <TextView
        android:id="@+id/tv_lupasandi"
        style="@style/medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lupa_sandi"
        android:textColor="@color/orange"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ed_password_login"
        app:layout_constraintHorizontal_bias="0.992"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_password_login"
        app:layout_constraintVertical_bias="0.05" />

    <com.capstone.laperinapp.ui.customView.ButtonLogin
        android:id="@+id/bt_masuk_login"
        style="@style/bold"
        android:layout_width="309dp"
        android:layout_height="53dp"
        android:background="@color/primary"
        android:enabled="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_password_login"
        app:layout_constraintVertical_bias="0.567" />

    <TextView
        android:id="@+id/tv_login_toregister"
        style="@style/medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:text="Belum punya akun?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bt_masuk_login"
        app:layout_constraintTop_toBottomOf="@+id/bt_masuk_login"
        app:layout_constraintVertical_bias="0.209" />

    <TextView
        android:id="@+id/bt_daftar_login"
        style="@style/bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:textColor="@color/orange"
        app:layout_constraintBottom_toBottomOf="@+id/tv_login_toregister"
        app:layout_constraintEnd_toEndOf="@+id/bt_masuk_login"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_login_toregister"
        app:layout_constraintTop_toTopOf="@+id/tv_login_toregister"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/porgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>