<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.editProfile.EditProfilActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#00000000"
            app:titleTextAppearance="@style/bold.black"
            app:titleTextColor="@color/black"/>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/title_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        style="@style/textColorSettingProfile"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <EditText
        android:id="@+id/edEdit_username"
        style="@style/medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/username"
        android:background="@drawable/bg_edit_text"
        android:inputType="text"
        android:cursorVisible="false"
        android:focusable="false"
        android:padding="15dp"
        android:textColorHint="@color/dark_gray"
        android:layout_marginTop="8dp"
        android:textSize="13sp"
        android:clickable="false"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_username"/>

    <TextView
        android:id="@+id/title_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/email"
        style="@style/textColorSettingProfile"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edEdit_username" />

    <com.capstone.laperinapp.ui.customView.EditText
        android:id="@+id/edEdit_email"
        style="@style/medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="@color/dark_gray"
        android:textSize="13sp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_email" />

    <TextView
        android:id="@+id/title_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="@string/fullname"
        style="@style/textColorSettingProfile"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edEdit_email" />

    <com.capstone.laperinapp.ui.customView.EditText
        android:id="@+id/edEdit_fullname"
        style="@style/medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:hint="@string/fullname"
        android:inputType="text"
        android:padding="15dp"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_fullname" />

    <TextView
        android:id="@+id/title_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="@string/alamat"
        style="@style/textColorSettingProfile"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edEdit_fullname" />

    <com.capstone.laperinapp.ui.customView.EditText
        android:id="@+id/edEdit_alamat"
        style="@style/medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alamat"
        android:inputType="text"
        android:padding="15dp"
        android:textSize="13sp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="@+id/edEdit_fullname"
        app:layout_constraintStart_toStartOf="@+id/edEdit_fullname"
        app:layout_constraintTop_toBottomOf="@+id/title_alamat" />

    <TextView
        android:id="@+id/title_no_telp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="@string/telp_number"
        style="@style/textColorSettingProfile"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edEdit_alamat" />

    <com.capstone.laperinapp.ui.customView.EditText
        android:id="@+id/edEdit_telephone"
        style="@style/medium"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:hint="@string/telp_number"
        android:inputType="number"
        android:padding="15dp"
        android:textSize="13sp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/edEdit_alamat"
        app:layout_constraintStart_toStartOf="@+id/edEdit_alamat"
        app:layout_constraintTop_toBottomOf="@+id/title_no_telp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_simpan"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@drawable/bg_button"
        android:text="@string/simpan"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="24dp"/>

    <ProgressBar
        android:id="@+id/progressBar_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/bt_simpan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edEdit_telephone" />

</androidx.constraintlayout.widget.ConstraintLayout>