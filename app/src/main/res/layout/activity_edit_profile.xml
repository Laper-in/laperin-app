<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.edit.EditProfile">

    <ImageButton
        android:id="@+id/ib_back_edit"
        android:layout_width="47dp"
        android:layout_height="41dp"
        android:background="@color/material_on_primary_disabled"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.020"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/tv_title_edit"
        style="@style/bold.black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EditAkun"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ib_back_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toEndOf="@+id/ib_back_edit"
        app:layout_constraintTop_toTopOf="@+id/ib_back_edit" />

    <com.capstone.laperinapp.ui.customView.EditText
        android:id="@+id/ed_edit_Username"
        style="@style/medium"
        android:layout_width="340dp"
        android:layout_height="53dp"
        android:layout_marginTop="52dp"
        android:hint="@string/username"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_edit"
        app:layout_constraintVertical_bias="0.018" />

    <com.capstone.laperinapp.ui.customView.EditText
        android:id="@+id/ed_edit_email"
        android:layout_width="340dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/ed_edit_Username"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ed_edit_Username"
        app:layout_constraintTop_toBottomOf="@+id/ed_edit_Username" />

    <com.capstone.laperinapp.ui.customView.EditText
        android:id="@+id/ed_edit_fullname"
        android:layout_width="340dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:hint="FullName"
        android:padding="10dp"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/ed_edit_email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ed_edit_email"
        app:layout_constraintTop_toBottomOf="@+id/ed_edit_email" />

    <com.capstone.laperinapp.ui.customView.EditText
        android:id="@+id/ed_edit_alamat"
        android:layout_width="340dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:hint="Alamat"
        android:padding="10dp"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/ed_edit_fullname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ed_edit_fullname"
        app:layout_constraintTop_toBottomOf="@+id/ed_edit_fullname" />

    <com.capstone.laperinapp.ui.customView.EditText
        android:id="@+id/ed_edit_telephone"
        android:layout_width="340dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:hint="Telephone"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/ed_edit_alamat"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ed_edit_alamat"
        app:layout_constraintTop_toBottomOf="@+id/ed_edit_alamat" />

    <com.capstone.laperinapp.ui.customView.EditText
        android:id="@+id/ed_edit_password"
        android:layout_width="340dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:hint="Ganti Password"
        android:padding="10dp"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/ed_edit_telephone"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ed_edit_telephone"
        app:layout_constraintTop_toBottomOf="@+id/ed_edit_telephone" />

    <com.capstone.laperinapp.ui.customView.ButtonActivity
        android:id="@+id/bt_simpan_edit"
        android:layout_width="340dp"
        android:layout_height="53dp"
        android:background="@drawable/rounded_profile"
        android:text="Simpan"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ed_edit_telephone"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/ed_edit_telephone"
        app:layout_constraintTop_toBottomOf="@+id/ed_edit_password"
        app:layout_constraintVertical_bias="0.487" />

    <ProgressBar
        android:id="@+id/progresBar_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>